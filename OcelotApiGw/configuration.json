{
  "Routes": [
    {
      //Ads
      "DownstreamPathTemplate": "/api/ads",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "ads-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/ads",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/ads/CreateAd",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "ads-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/ads/CreateAd",
      "UpstreamHttpMethod": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/ads/filteredads/{filter}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "ads-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/ads/filteredads/{filter}",
      "UpstreamHttpMethod": [ "GET" ]
    },

    //Animals
    {
      "DownstreamPathTemplate": "/api/Animal/colorofanimals",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "animals-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/Animal/colorofanimals",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/Animal/kindofanimals",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "animals-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/Animal/kindofanimals",
      "UpstreamHttpMethod": [ "GET" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl":  "http://localhost:5020"
  }
}